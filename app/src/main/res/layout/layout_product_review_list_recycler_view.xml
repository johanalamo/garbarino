<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayoutOneProduct"
              android:orientation="vertical"
              style="@style/stlProductListItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:text="TextView"
                    style="@style/stlReviewStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtReviewStars"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:text="TextView"
                    style="@style/stlReviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtReviewDate"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
            />
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="TextView"
                style="@style/stlReviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtReviewTitle"
        />
        <TextView
                android:text="TextView"
                style="@style/stlReviewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtReviewDescription"
        />
        <TextView
                android:text="TextView"
                style="@style/stlReviewNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtReviewNickname"
        />

        <Space
                android:layout_width="@dimen/threeSep"
                android:layout_height="0dp"/>
    </LinearLayout>
</LinearLayout>