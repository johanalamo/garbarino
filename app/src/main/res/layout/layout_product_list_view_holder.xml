<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.widget.LinearLayout"/>
        <variable
                name="product"
                type="com.example.johan.products.response.Product" />
    </data>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="2dp">

        <LinearLayout
                android:id="@+id/linearLayoutOneProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/imgProduct"
                    style="@style/stlImgProductList" />

            <TextView
                    android:id="@+id/txtDescription"
                    style="@style/stlProductListDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{product.description}" />

            <TextView
                    android:id="@+id/txtPrice"
                    style="@style/stlProductListPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{ @string/price + " " + product.price }' />

            <LinearLayout
                    android:id="@+id/lytDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{ product.discount == 0  ? LinearLayout.GONE : LinearLayout.VISIBLE }"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txtListPrice"
                        style="@style/stlProductListPriceList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{ @string/price + " " + product.list_price }' />

                <Space
                        android:layout_width="@dimen/threeSep"
                        android:layout_height="0dp" />

                <TextView
                        android:id="@+id/txtDiscount"
                        style="@style/stlProductListDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{ product.discount + @string/discount }' />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>