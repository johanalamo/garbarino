<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="stlProductListItem">
        <item name="android:padding">@dimen/threeSep</item>
        <item name="android:layout_margin">@dimen/oneSep</item>
        <item name="android:background">@drawable/bg_product_list_item</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="stlImgProductList">
        <item name="android:src">@drawable/img_one_phone</item>
        <item name="android:layout_height">@dimen/sizeImgProductList</item>
        <item name="android:layout_width">@dimen/sizeImgProductList</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="stlProductListDescription">
        <item name="android:textSize">@dimen/textSizeDescriptionInList</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="stlProductListPrice">
        <item name="android:textSize">@dimen/textSizePriceInList</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="stlProductListPriceList">
        <item name="android:textSize">@dimen/textSizeListPriceInList</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="stlProductListDiscount">
        <item name="android:textSize">@dimen/textSizeDiscountInList</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>
</resources>
